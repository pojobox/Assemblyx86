{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar y ejecutar ASM (ruta completa)",
      "type": "shell",
      "command": "${workspaceFolder}\\build.bat",
      "args": [
        "${fileDirname}\\${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
